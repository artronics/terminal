{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },{
            "label": "run",
            "type": "shell",
            "command": "zig build run",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run terminal tests",
            "type": "shell",
            "command": "${env:HOME}/.local/bin/zig test -femit-bin=${workspaceFolder}/zig-out/terminal ${workspaceFolder}/src/terminal.zig",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        }
    ]
}